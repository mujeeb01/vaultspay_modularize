<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SplashFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_user_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to User Side"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_merchant_side"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_merchant_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move to Merchant Side"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_user_side" />

</androidx.constraintlayout.widget.ConstraintLayout>